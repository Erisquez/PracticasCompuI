#include <iostream>

using namespace std;
int main (){

//Se definen las dos variables numéricas con las que se harán las operaciones y se indica al usuario que debe introducirlas.

int a, b, opcion, resultado;
cout<< "Primer Número";
cin>> a;
cout<< "Segundo Número";
cin>> b;

//Indicar al usuario que debe elegir que operación quiere realizar y darle el espacio para que introduzca la opción que guste.

cout<<"Si desea sumarlos, pulse 1"<<endl;
cout<<"Si desea restarlos, pulse 2"<<endl;
cout<<"Si desea multiplicarlos, pulse 3"<<endl;
cout<<"Si desea dividirlos, pulse 4"<<endl;
cin>>opcion;

//Parte del programa que realiza la operación indicada según el caso. 

switch(opcion){
    case 1: resultado=a+b;
    break;
    case 2: resultado=a-b;
    break;
    case 3: resultado=a*b;
    break;
    case 4: resultado=a/b;
    break;
    default:
    break;
}

//Se muestra el resultado de la operación al usuario.

cout<<resultado<<endl;
system("pause");
    return 0;
}
